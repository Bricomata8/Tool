#echo "[LATEX]
#master-filename = $filename.tex" > "`dirname "$f"`/.`basename "$f"`.ini" ; 
#done
#for f in src/*.tex ; do
#echo "[LATEX]
#master-filename = ../$filename.tex" > "`dirname "$f"`/.`basename "$f"`.ini" ; 
#done
#for f in src/*/*.tex ; do
#echo "[LATEX]
#master-filename = ../../$filename.tex" > "`dirname "$f"`/.`basename "$f"`.ini" ; 
#done







