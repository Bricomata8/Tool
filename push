#!/bin/bash

mypath=`realpath $0`
directory=`dirname $mypath`
filename=`basename $directory`
cd $directory

git config --global user.email "papierpourgithub@gmail.com"
git remote add $filename https://github.com/BRICOMATA8/$filename.git

mkdir -p config/gedit-config
mkdir -p config/gedit-local-share
mkdir -p config/Mailspring

cp -r -v \
	~/.bashrc \
	~/.hidden \
	~/.bash_history \
	~/.Renviron \
	~/.zotero \
	config/

cp -r -v ~/.config/gedit config/gedit-config/
cp -r -v ~/.local/share/gedit config/gedit-local-share/
cp -r -v ~/.mozilla/firefox/*.default/extensions config/
cp -r -v ~/.config/Mailspring/"Local Storage" config/

cd ~/.config/Mailspring
ls -1 . | egrep '^[^f].*' | xargs cp -rt /home/aghiles/Aghiles/Tool/config/Mailspring/

git add -v .
git commit -m "commit"
git push -u -f $filename master
#firefox https://github.com/BRICOMATA8/$filename.git

